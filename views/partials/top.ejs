  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400&family=Roboto:wght@400&family=Open+Sans:wght@400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>
    <div class="top">
      <div class="navbar"> 
        <div class="left">
          <img src="https://media.discordapp.net/attachments/1205667996174131251/1215043628133781504/image-modified.png?ex=65fb508f&is=65e8db8f&hm=2a1a9ff727bb5dcb97153db843214d4a49bb165203ff5531c8964d7a1d097a8f&=&format=webp&quality=lossless" alt="Company Logo">
          <li><a href="/">Home</a></li>
          <li><a href="/Items">Items</a></li>
        </div>
        <div class="right">
          <% if (locals.user) { %>
            <a style="color: aqua;" href="/cart"><i class="fa-solid fa-cart-shopping"></i></i> Cart</a>
            <a style="color: greenyellow;" href="/items"><i class="fa-solid fa-store"></i></i> Items</a>
            <a style="color: red;" href="/logout"><i class="fa-solid fa-xmark"></i> Logout</a>
            


            
            
            <% } else { %>
              <a href="/login"><i class="fa-solid fa-arrow-right-from-bracket"></i> Sign up</a>
              <% } %> 
        </div>
      </div>
                    <div class="pfp" id="top-right-pfp">
                      <% if (locals.user) { %>
                        <img class="pfp" src="<%= user.picture %>" alt="Your pfp">
                      <% } %>
                    </div>



                        <script>
                          const pfpElement = document.getElementById('top-right-pfp');
                          pfpElement.addEventListener('click', function() {
                          
                            window.location.href = '/dashboard';
                          });
                        </script>
